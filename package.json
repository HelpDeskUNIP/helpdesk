{
  "name": "sistema-chamados-backend",
  "version": "1.0.0",
  "description": "Backend do Sistema de Chamados com Node.js, TypeScript e Prisma",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "db:generate": "prisma generate",
